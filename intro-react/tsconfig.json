{
    "compilerOptions": {
      "target": "ES2022",
      "module": "ESNext",
      "moduleResolution": "Bundler",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "baseUrl": ".",
      "paths": {
        "@backend/*": ["backend/src/*"],
        "@frontend/*": ["frontend/src/*"],
        "@shared/*": ["shared/*"]
      }
    },
    "include": ["frontend/**/*", "backend/**/*", "shared/**/*"]
  }
  